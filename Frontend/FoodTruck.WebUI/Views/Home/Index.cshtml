@model IEnumerable<FoodDto>

@{
	ViewData["Title"] = "Home Page";
}

<form>
	<div class="container row">
		<p>Avaliable trucks: @ViewBag.truckCount</p>
		<br />
		@foreach (var item in Model)
		{
			<div class="col-12 col-md-6 col-lg-3">
				<div class="p-0 my-3 border rounded">
					<div class="card">
						<h3 class="card-title text-dark-50 text-center py-2">@item.Name</h3>
						<img src="@item.ImageUrl" height="180" class="card-img-top" />
						<div class="card-body">
							<div class="d-flex justify-content-between py-2">
								<span class="text-danger" style="font-size:20px;">@string.Format("{0:c}", @item.Price)</span>

							</div>
							<p class="card-text">@Html.Raw(item.Description)</p>
							<div class="row">
								<div class="col">
									<a asp-action="FoodDetails" asp-route-foodId="@item.FoodId" class="btn btn-success form-control">Details</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>
</form>